<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="product_template_purchase_collective">
            <field name="name">product.template.purchase.collective</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="purchase.view_product_supplier_inherit"/>
            <field name="arch" type="xml" >
              <xpath expr="//field[@name='purchase_ok']" position="after">
                <group name="collective_purchase" string="Collective Purchase" groups="purchase.group_purchase_collective_manager">  
<!--                    <field name="cp_price"/> -->
                    <field name="cp_order_id"/>
                </group>
              </xpath>
              <xpath expr="//div/field[@name='purchase_ok']" position="attributes">
                  <attribute name="groups">"purchase.group_purchase_collective_manager"</attribute>
              </xpath>
              <xpath expr="//div/label[@for='purchase_ok']" position="attributes">
                  <attribute name="groups">"purchase.group_purchase_collective_manager"</attribute>
              </xpath>
            </field>
        </record>
    </data>
</openerp>


